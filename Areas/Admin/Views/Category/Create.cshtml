@{
    ViewData["Title"] = "Tạo danh mục";
}
<div class="form-body">
    <div class="form-holder">
        <div class="form-content mt-2">
            <div class="form-items" style="min-height:660px;position:relative;margin-bottom:10px">
                <h3>Tạo danh mục mới</h3>
                <p>Điền đầy đủ thông tin</p>
                <form action="/admin/category/create" method="POST" id="categoryForm" class="requires-validation" enctype="multipart/form-data">
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="Name" placeholder="Tên danh mục" required>
                    </div>
                    <div class="col-md-12 mt-3" upload-image>
                        <input type="file" class="form-control form-control-line" placeholder="Ảnh danh mục" name="Url" accept="image/*" upload-image-input>
                        <img id="thumbnailPreview"
                             class="mt-2"
                             src=""
                             alt=""
                             upload-image-preview
                              />
                    </div>
                    <div class="form-button mt-3" style="position:absolute;bottom:20px; width:93%">
                        <button id="submit" class="btn btn-primary" type="submit">Tạo danh mục</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>