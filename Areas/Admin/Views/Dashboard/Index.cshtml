<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dataProduct = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartProduct));

        console.log(dataProduct);
        const colors = [
            'rgba(255, 99, 132, 0.6)', 
            'rgba(54, 162, 235, 0.6)', 
            'rgba(255, 206, 86, 0.6)',
            'rgba(75, 192, 192, 0.6)',
            'rgba(153, 102, 255, 0.6)' 
        ];
        const emptyColor = 'rgba(128, 128, 128, 0.6)'; 

        // Kiểm tra nếu dữ liệu rỗng (toàn giá trị bằng 0)
        function isEmptyData(data) {
            return Object.values(data).every(value => value === 0);
        }
        const commonLegend = document.getElementById('commonLegend');
        const labels = Object.keys(dataProduct);
        labels.forEach((label, index) => {
            const legendItem = document.createElement('li');
            legendItem.style.display = 'flex';
            legendItem.style.alignItems = 'center';
            legendItem.style.marginRight = '10px';
            legendItem.innerHTML = `
                             <span style="display:inline-block; width:15px; height:15px; background-color:${colors[index]}; margin-right:8px;"></span>
                             ${label}
                         `;
            commonLegend.appendChild(legendItem);
        });
        // Tạo biểu đồ hoặc hiển thị màu xám nếu không có dữ liệu
        function createChart(ctxId, data, title) {
            const ctx = document.getElementById(ctxId).getContext('2d');

            let chartData, chartColors;

            if (isEmptyData(data)) {
                chartData = [1];
                chartColors = [emptyColor];
                chartLabels = ['Không có dữ liệu'];
            } else {
                chartData = Object.values(data);
                chartColors = colors.slice(0, chartData.length);
                chartLabels = Object.keys(data);
            }

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        data: chartData,
                        backgroundColor: chartColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    animation: {
                        duration: 1500,
                        easing: 'easeOutBounce'
                    },
                    plugins: {
                        legend: {
                            display: false // Tắt legend mặc định
                        },
                        title: {
                            display: true,
                            position: "bottom",
                            text: title,
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    }
                }
            });
        }

        // Tạo biểu đồ cho từng loại dữ liệu
        createChart('dataProduct', dataProduct, 'Bài đăng');
    });
</script>


