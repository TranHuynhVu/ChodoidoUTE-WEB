@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messenger Style Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f0f2f5;
        }

        .sidebar {
            background-color: #fff;
            height: 100vh;
            border-right: 1px solid #ddd;
        }

        .chat-list {
            max-height: calc(100vh - 80px);
            overflow-y: auto;
        }

        .chat-item:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .chat-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 15px;
            background-color: #f7f7f7;
        }

        .message {
            max-width: 70%;
            padding: 10px 15px;
            border-radius: 20px;
            margin-bottom: 10px;
            font-size: 14px;
        }

            .message.left {
                background-color: #e6f7ff;
                align-self: flex-start;
            }

            .message.right {
                background-color: #0084ff;
                color: #fff;
                align-self: flex-end;
            }

        .chat-input {
            border-top: 1px solid #ddd;
            padding: 10px;
        }

            .chat-input input {
                border-radius: 20px;
            }

        .send-btn {
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4 col-lg-3 sidebar p-3">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Tìm kiếm...">
                </div>
                <ul class="list-group chat-list">
                    <li class="list-group-item chat-item d-flex align-items-center">
                        <img src="https://placehold.co/50x50" alt="Avatar" class="rounded-circle me-2">
                        <div>
                            <div class="fw-bold">Nguyễn Văn A</div>
                            <small class="text-muted">Tin nhắn gần đây...</small>
                        </div>
                    </li>
                    <li class="list-group-item chat-item d-flex align-items-center">
                        <img src="https://placehold.co/50x50" alt="Avatar" class="rounded-circle me-2">
                        <div>
                            <div class="fw-bold">Trần Văn B</div>
                            <small class="text-muted">Tin nhắn gần đây...</small>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Chat container -->
            <div class="col-md-8 col-lg-9 d-flex flex-column chat-container">
                <!-- Header -->
                <div class="d-flex align-items-center p-3 bg-white border-bottom">
                    <img src="https://placehold.co/40x40" alt="Avatar" class="rounded-circle me-2">
                    <div>
                        <div class="fw-bold">Nguyễn Văn A</div>
                        <small class="text-muted">Đang hoạt động</small>
                    </div>
                    <div class="ms-auto">
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                </div>

                <!-- Messages -->
                <div class="chat-messages">
                    <div class="d-flex flex-column">
                        <div class="message left">
                            <p>Xin chào! Đây là tin nhắn của bạn.</p>
                        </div>
                        <div class="message right">
                            <p>Chào bạn! Tôi có thể giúp gì?</p>
                        </div>
                    </div>
                </div>

                <!-- Input -->
                <div class="chat-input d-flex align-items-center bg-white">
                    <input type="text" class="form-control me-2" placeholder="Nhập tin nhắn...">
                    <button class="btn btn-primary send-btn">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
