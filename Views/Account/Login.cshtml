@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .login-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .login-container img {
            display: block;
        }

        .login-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #343a40;
        }

        .btn-primary {
            background-color: #ff9800;
            border-color: #ff9800;
        }

        .btn-primary:hover {
            background-color: #e68900;
            border-color: #e68900;
        }

        .social-login button {
            flex: 1;
            margin: 0 5px;
            font-size: 14px;
            align-items: center;
            gap: 5px;
            border: 1px solid #ddd;
        }
        #logo-ute-login{
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img id="logo-ute-login"
             src="~/Logo_Đại_học_Sư_phạm_Kỹ_thuật_Đà_Nẵng.png"
             alt="Logo"
             width="100"
             height="100"
             class="mb-3" />
        <h2 class="text-center">Đăng nhập</h2>
        <form action="/account/login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger main-error"></div>
            <div class="mb-3">
                <label for="phone" class="form-label">Email</label>
                <input type="text"
                       id="email"
                       class="form-control"
                       placeholder="Số điện thoại" 
                       name="Email"
                       required/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password"
                       id="password"
                       class="form-control"
                       placeholder="Mật khẩu" 
                       name="Password"
                       required/>
            </div>
            <div class="mb-3 text-end">
                <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
            </div>
            <button type="submit" class="btn btn-primary w-100">ĐĂNG NHẬP</button>
        </form>
        <div class="text-center my-3">Hoặc đăng nhập bằng</div>
        <div class="d-flex social-login">
            <button class="btn d-flex">
                <img width="24" height="24" src="https://img.icons8.com/fluency/48/facebook-new.png" alt="facebook-new" /> Facebook
            </button>
            <button class="btn d-flex justify-content">
                <img width="24" height="24" src="https://img.icons8.com/fluency/48/google-logo.png" alt="google-logo" /> Google
            </button>
            <button class="btn d-flex justify-content">
                <img width="24" height="24" src="~/Logo_Đại_học_Sư_phạm_Kỹ_thuật_Đà_Nẵng.png" alt="ute-logo" /> UTE
            </button>
        </div>
        <div class="text-center mt-3">
            Chưa có tài khoản?
            <a href="/dang-ky" class="text-decoration-none">Đăng ký tài khoản mới</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+3i4l6Y1Y5bo4l0I4Q5n5q5p5p5p5"
            crossorigin="anonymous"></script>
</body>
</html>
