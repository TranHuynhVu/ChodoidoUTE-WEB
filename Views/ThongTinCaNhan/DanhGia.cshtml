@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> userManager;
@inject SignInManager<AppUser> signManager;
@using ChodoidoUTE.ViewModels;
@inject ChodoidoUTE.Services.Interface.IUser _user;
@{
    var user = await userManager.GetUserAsync(User);
    List<DanhGiaVM> danhgias = await _user.GetDanhGiaById(user.Id);
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
    }

    .container {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }


    .profile-section {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .profile-section img {
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile-section .profile-info {
            display: flex;
            flex-direction: column;
        }

            .profile-section .profile-info .name {
                font-size: 18px;
                font-weight: bold;
            }

            .profile-section .profile-info .create-store {
                color: #007bff;
                cursor: pointer;
            }

    .nav-tabs .nav-item {
        margin-right: 5px;
    }

    .nav-tabs .nav-link {
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #333;
        transition: all 0.3s ease;
    }

        .nav-tabs .nav-link:hover {
            background-color: #f5f5f5;
            color: #ff9800;
        }

        .nav-tabs .nav-link.active {
            border-color: #ff9800;
            color: #fff;
            background-color: #ff9800;
        }

    .tab-content {
        margin-top: 20px;
    }

    .draft-item {
        display: flex;
        align-items: center;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        transition: box-shadow 0.3s ease;
    }

        .draft-item:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .draft-item img {
            border-radius: 8px;
            margin-right: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .draft-item .draft-info {
            flex-grow: 1;
        }

            .draft-item .draft-info .title {
                font-weight: bold;
                font-size: 16px;
                margin-bottom: 5px;
            }

            .draft-item .draft-info .location {
                font-size: 14px;
                color: #888;
                margin-bottom: 10px;
            }

            .draft-item .draft-info .price {
                font-size: 16px;
                color: #28a745;
                font-weight: bold;
            }

        .draft-item .actions button {
            width: 100%;
            border-radius: 5px;
            font-size: 14px;
        }

        .draft-item .actions .btn-success {
            background-color: #28a745;
            border: none;
            transition: background-color 0.3s ease;
        }

            .draft-item .actions .btn-success:hover {
                background-color: #218838;
            }

        .draft-item .actions {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    .draft-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .draft-item img {
            margin-right: 15px;
            border-radius: 8px;
        }

    .draft-info h5 {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .draft-info p {
        font-size: 14px;
        margin: 5px 0;
    }

    .draft-info #stars {
        color: #ff9900; /* Màu vàng cho sao */
    }

    .star {
        color: gold; /* Màu vàng cho sao đầy */
        font-size: 20px; /* Kích thước sao */
    }

        .star:last-child {
            color: gray; /* Màu xám cho sao rỗng */
        }

</style>
<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a class="text-decoration-none text-primary" href="/dao-cho">
                Chợ Tốt
            </a>
            &gt;
            <span>
               Thông tin cá nhân
            </span>
            &gt;
            <span>
                Đánh giá của tôi
            </span>
        </div>

    </div>
    <div class="profile-header d-flex align-items-center">
        <img alt="Profile picture of @user.Name" height="80" src="@user.ImgUrl" width="80" />
        <div class="ms-3">
            <div class="name">
                @user.Name
            </div>
            <div class="rating">
                <i class="fas fa-star">
                </i>
                <i class="fas fa-star">
                </i>
                <i class="fas fa-star">
                </i>
                <i class="fas fa-star">
                </i>
                <i class="fas fa-star">
                </i>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs mb-3" id="navTabs">

        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab1" href="#">TỪ NGƯỜI MUA (@danhgias.Count?)</a>
        </li>
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab2" href="#">TỪ NGƯỜI BÁN (0)</a>
        </li>
    </ul>
    <div class="tab-content active" id="tab1">
        @if (danhgias != null && danhgias.Count > 0)
        {
            @foreach (var item in danhgias)
            {
                <div class="draft-item">
                    <img alt="Image of the draft item" height="100" src="@item.ProductImages?.UrlImg" width="100" id="draft-image" />
                    <div class="draft-info">
                        <h5 id="draft-title">@item.Product?.Title</h5>
                        <p id="draft-user">Người dùng: <span>@item.User?.Name</span></p>

                        <!-- Hiển thị số sao -->
                        <p id="draft-rating">
                            Số sao:
                            <span id="stars">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Rate)
                                    {
                                        <span class="star">★</span>  <!-- Hiển thị sao đầy -->
                                    }
                                    else
                                    {
                                        <span class="star">☆</span>  <!-- Hiển thị sao rỗng -->
                                    }
                                }
                            </span>
                        </p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có đánh giá nào.</p>
        }

       
    </div>


    <div class="tab-content" id="tab2">

    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".nav-quan-ly-tin").on("click", function (e) {
                e.preventDefault();

                // Xóa lớp active khỏi tất cả các tab
                $(".nav-link").removeClass("active");
                $(".tab-content").removeClass("active");

                // Thêm lớp active vào tab được click
                $(this).addClass("active");
                const targetTab = $(this).data("tab");
                $("#" + targetTab).addClass("active");
            });
        });
    </script>
    <script>
        function btnAnTin(btn, id) {
            const $item = $(btn).closest('.draft-item')
            $.ajax({
                url: `/quanlytin/product/antin/${id}`,
                type: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.error) {
                            toastr.error(response.message);
                            return;
                        }
                        toastr.success(response.message);
                        $item.hide();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Đã xảy ra lỗi: ' + error);
                    toastr.error(error);
                }
            });
        }


        function btnXoaTin(btn, id) {
            const $item = $(btn).closest('.draft-item')
            $.ajax({
                url: `/quanlytin/product/xoatin/${id}`,
                type: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.error) {
                            toastr.error(response.message);
                            return;
                        }
                        toastr.success(response.message);
                        $item.hide();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Đã xảy ra lỗi: ' + error);
                    toastr.error(error);
                }
            });
        }
    </script>
}