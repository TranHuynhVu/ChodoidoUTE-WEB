        .nav-tabs .nav-link.active {
            border-color: #ff9800;
            color: #fff;
            background-color: #ff9800;
        }

    .tab-content {
        margin-top: 20px;
    }
    .draft-item {
        display: flex;
        align-items: center;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        transition: box-shadow 0.3s ease;
    }

        .draft-item:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .draft-item img {
            border-radius: 8px;
            margin-right: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .draft-item .draft-info {
            flex-grow: 1;
        }
       .draft-item .draft-info .title {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 5px;
        }

        .draft-item .draft-info .location {
            font-size: 14px;
            color: #888;
            margin-bottom: 10px;
        }

        .draft-item .draft-info .price {
            font-size: 16px;
            color: #28a745;
            font-weight: bold;
        }

        .draft-item .actions button {
            width: 100%;
            border-radius: 5px;
            font-size: 14px;
        }

        .draft-item .actions .btn-success {
            background-color: #28a745;
            border: none;
            transition: background-color 0.3s ease;
        }

            .draft-item .actions .btn-success:hover {
                background-color: #218838;
            }

        .draft-item .actions {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

       
    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }
</style>
