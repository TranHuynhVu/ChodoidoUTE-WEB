    }


    .profile-section {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .profile-section img {
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile-section .profile-info {
            display: flex;
            flex-direction: column;
        }

            .profile-section .profile-info .name {
                font-size: 18px;
