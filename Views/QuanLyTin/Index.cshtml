@using ChodoidoUTE.ViewModels;
@model QuanLyTinVM;
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
    }

    .container {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }


    .profile-section {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .profile-section img {
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile-section .profile-info {
            display: flex;
            flex-direction: column;
        }

            .profile-section .profile-info .name {
                font-size: 18px;
                font-weight: bold;
            }

            .profile-section .profile-info .create-store {
                color: #007bff;
                cursor: pointer;
            }

    .nav-tabs .nav-item {
        margin-right: 5px;
    }

    .nav-tabs .nav-link {
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #333;
        transition: all 0.3s ease;
    }

        .nav-tabs .nav-link:hover {
            background-color: #f5f5f5;
            color: #ff9800;
        }

        .nav-tabs .nav-link.active {
            border-color: #ff9800;
            color: #fff;
            background-color: #ff9800;
        }

    .tab-content {
        margin-top: 20px;
    }

    .draft-item {
        display: flex;
        align-items: center;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        transition: box-shadow 0.3s ease;
    }

        .draft-item:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .draft-item img {
            border-radius: 8px;
            margin-right: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .draft-item .draft-info {
            flex-grow: 1;
        }

            .draft-item .draft-info .title {
                font-weight: bold;
                font-size: 16px;
                margin-bottom: 5px;
            }

            .draft-item .draft-info .location {
                font-size: 14px;
                color: #888;
                margin-bottom: 10px;
            }

            .draft-item .draft-info .price {
                font-size: 16px;
                color: #28a745;
                font-weight: bold;
            }

        .draft-item .actions button {
            width: 100%;
            border-radius: 5px;
            font-size: 14px;
        }

        .draft-item .actions .btn-success {
            background-color: #28a745;
            border: none;
            transition: background-color 0.3s ease;
        }

            .draft-item .actions .btn-success:hover {
                background-color: #218838;
            }

        .draft-item .actions {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }
</style>
<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a class="text-decoration-none text-primary" href="/dao-cho">
                Chợ Tốt
            </a>
            &gt;
            <span>
                Quản lý tin
            </span>
        </div>
        <div>
            <button class="btn btn-outline-danger">
                Có gì mới
            </button>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <button class="btn btn-warning me-2">
                Lợi tất
            </button>
            <button class="btn me-2">
                Gói PRO
            </button>
            <button class="btn me-2">
                Danh sách liên hệ
            </button>
        </div>
        <div class="d-flex align-items-center">
            <span class="me-2">
                Số dư: 0
            </span>
            <button class="btn btn-success">
                +
            </button>
        </div>
    </div>
    <div class="profile-section mb-3">
        <img alt="Profile picture of the user" height="50" src="@Model.User.ImgUrl" width="50" />
        <div class="profile-info">
            <span class="name">
                @Model.User.Name
            </span>
            <span class="create-store">
                + Tạo cửa hàng
            </span>
        </div>
    </div>
    <ul class="nav nav-tabs mb-3" id="navTabs">
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link active" data-tab="tab1" href="#">ĐANG HIỂN THỊ (@Model.DA_DUYETS?.Count)</a>
        </li>
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab2" href="#">BỊ TỪ CHỐI (@Model.TU_CHOIS?.Count)</a>
        </li>
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab3" href="#">CẦN THANH TOÁN (0)</a>
        </li>
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab4" href="#">CHỜ DUYỆT (@Model.CHO_DUYETS?.Count)</a>
        </li>
        <li class="nav-item">
            <a class="nav-quan-ly-tin nav-link" data-tab="tab5" href="#">ĐÃ ẨN (@Model.DA_ANS?.Count)</a>
        </li>
    </ul>
    <div class="tab-content active" id="tab1">
        @if (Model.DA_DUYETS.Count <= 0)
        {
            <p>Không có tin đăng ĐANG HIỂN THỊ.</p>
        }
        else
        {
            @foreach (var item in Model.DA_DUYETS)
            {
                <div class="draft-item">
                    <img alt="Image of the draft item" height="100" src="@item.ProductImages?.FirstOrDefault()?.UrlImg" width="100" />
                    <div class="draft-info">
                        <div class="title">
                            @item.Title
                        </div>
                        <div class="location">
                            @item.Description
                        </div>
                        <div class="price">
                            $@item.Price
                        </div>
                    </div>
                    <div class="actions">
                        <button onclick="btnAnTin(this,@item.Id)" class="btn btn-danger mb-2">
                            Ẩn
                        </button>
                        <a href="/user/product/edit/@item.Id"  class="btn btn-success">
                            Sửa
                        </a>
                    </div>
                </div>
            }
        }

    </div>
    <div class="tab-content" id="tab2">
        @if (Model.TU_CHOIS.Count > 0)
        {
            @foreach (var item in Model.TU_CHOIS)
            {
                <div class="draft-item">
                    <img alt="Image of the draft item" height="100" src="@item.ProductImages?.FirstOrDefault()?.UrlImg" width="100" />
                    <div class="draft-info">
                        <div class="title">
                            @item.Title
                        </div>
                        <div class="location">
                            @item.Description
                        </div>
                        <div class="price">
                            $@item.Price
                        </div>
                    </div>
                    <div class="actions">
                        <button onclick="btnXoaTin(this,@item.Id)" class="btn btn-danger mb-2">
                            Xóa
                        </button>
                        <a href="/user/product/edit/@item.Id" class="btn btn-success">
                            Sửa
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có tin đăng BỊ TỪ CHỐ.</p>
        }
    </div>
    <div class="tab-content" id="tab3">
        <p>Nội dung CẦN THANH TOÁN.</p>
    </div>
    <div class="tab-content" id="tab4">
        @if (Model.CHO_DUYETS.Count > 0)
        {
            @foreach (var item in Model.CHO_DUYETS)
            {
                <div class="draft-item">
                    <img alt="Image of the draft item" height="100" src="@item.ProductImages?.FirstOrDefault()?.UrlImg" width="100" />
                    <div class="draft-info">
                        <div class="title">
                            @item.Title
                        </div>
                        <div class="location">
                            @item.Description
                        </div>
                        <div class="price">
                            $@item.Price
                        </div>
                    </div>
                    <div class="actions">
                        <button onclick="btnXoaTin(this,@item.Id)" class="btn btn-danger mb-2">
                            Xóa
                        </button>
                        <a href="/user/product/edit/@item.Id" class="btn btn-success">
                            Sửa
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có tin đăng CHỜ DUYỆT.</p>
        }
    </div>
    <div class="tab-content" id="tab5">
        @if (Model.DA_ANS.Count > 0)
        {
            @foreach (var item in Model.DA_ANS)
            {
                <div class="draft-item">
                    <img alt="Image of the draft item" height="100" src="@item.ProductImages?.FirstOrDefault()?.UrlImg" width="100" />
                    <div class="draft-info">
                        <div class="title">
                            @item.Title
                        </div>
                        <div class="location">
                            @item.Description
                        </div>
                        <div class="price">
                            $@item.Price
                        </div>
                    </div>
                    <div class="actions">
                        <button onclick="btnXoaTin(this,@item.Id)" class="btn btn-danger mb-2">
                            Xóa
                        </button>
                        <a href="/user/product/edit/@item.Id" class="btn btn-success">
                            Sửa
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có tin đăng ĐÃ ẨN.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".nav-quan-ly-tin").on("click", function (e) {
                e.preventDefault();

                // Xóa lớp active khỏi tất cả các tab
                $(".nav-link").removeClass("active");
                $(".tab-content").removeClass("active");

                // Thêm lớp active vào tab được click
                $(this).addClass("active");
                const targetTab = $(this).data("tab");
                $("#" + targetTab).addClass("active");
            });
        });                  
    </script>
    <script>
        function btnAnTin(btn,id) {
            const $item = $(btn).closest('.draft-item')
            $.ajax({
                url: `/quanlytin/product/antin/${id}`,
                type: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.error) {
                            toastr.error(response.message);
                            return;
                        }
                        toastr.success(response.message);
                        $item.hide();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Đã xảy ra lỗi: ' + error);
                    toastr.error(error);
                }
            });
        }


        function btnXoaTin(btn,id) {
            const $item = $(btn).closest('.draft-item')
            $.ajax({
                url: `/quanlytin/product/xoatin/${id}`,
                type: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.error) {
                            toastr.error(response.message);
                            return;
                        }
                        toastr.success(response.message);
                        $item.hide();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Đã xảy ra lỗi: ' + error);
                    toastr.error(error);
                }
            });
        }
    </script>
}
